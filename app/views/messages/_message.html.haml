.message{"data-message_id": "#{message.id}"}
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S")
  .message__text
    - if message.content.present?
      .message__text__content
        = message.content
    - if message.image.present?
      = image_tag message.image.url